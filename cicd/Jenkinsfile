pipeline {
    agent any
    tools {
        maven 'Maven 3.6.3' 
    }
    
    stages {
        stage ('Build') {
            steps {
                sh 'mvn clean package'
                  }
                        }
            
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://65.1.64.183:8080/')], contextPath: '/hello-world.war', onFailure: false, war: 'webapps/*.war' 
        }
      }
    }
    }
}
